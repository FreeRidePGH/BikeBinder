/* header provides a common label to rest above each part of the site */
header {
    margin: 0;
}

header h1 {
    border-bottom-width:2px;
    border-bottom-style:solid;
    border-color: #999;
    margin-bottom: .6em;

    color: #333;
    /* override these here but think about recompiling bootstrap for consistency */
    line-height: 30px;
    font-size: 25px;
}

#shared_menu {
    border: 1px solid #ddd;	     
    background-color: #003;
    padding: 0;		  
    margin: 0;
    margin-top: 15px;
    border-radius: 5px;
}

#shared_menu ul{
    margin: 0;
}

#shared_menu input.search-term{
width: 225px;
}

#header_logo img{
margin-top: 20px;	
margin-left: 10px;
}

div.overlay {
    text-align: center;
    background: #CCC;
    margin: 0;	
    padding: 0;
    border: 1px solid #999;
}
p.demoHelp {
    font-size: 14px;
    color: #a00;
    padding: 6px;
    background: #fd9;
    border: 1px solid #a00;
    margin: 0px;
    text-align: center;
}

footer {
    margin-top: 3em;
}
footer p.copyright {
    clear: both;
    padding-top: 2em;
}
a.editLink {
    font-size: 14px;
    font-family: Helvetica Neue, sans-serif;
}


section#alerts {
    padding: .25em;
    clear: both;
    height: 50px;
}
section#alerts p{
margin: .15em;
}

/* sitewide table legibility style */ 
table tr:nth-child(2n+1) {
    /*background: #f1f1f1;*/
}

/* Generic comments styling */
#newCommentWrap,  form#new_comment {
    margin-top: 0;
}
form#new_comment #comment_body {
    height: 60px;
}

div.comments {
    margin-bottom: 5px;
    float: left;
    clear: left;
    
    /* contains the user and date information associated with the comment */
    span {
	margin: 2px;
	padding: 2px;
    }

    p {
	padding: 5px;
	word-wrap: break-word;
    }

}
.noteCard {
    border: solid 1px #888;
    box-shadow: -1px 1px 1px #999;
}
footer {
    margin-top: 40px;
}

button.toggler {
    float: left;
    margin: .25em .25em 0 3em;
    display: inline;
}
.notesWrapper {
    h3 {
	margin: 0 .25em .5em .25em;
	float: left;
    }

}
/* Styling to customize for look and feel */
.inline-label {
    text-align:right;
}


body {
     <% if ENV['DEMOVISUAL'] %>
     background: url(<%= asset_path 'demo_env_bg.png' %>);
     <% end %>
}

body div.container {
     background: #fff;
}

body div.container-fluid{
    padding-left: 0px;
    padding-right: 0px;
}

.floatRight{
    float: right !important;
}

#add_brand,#add_model{
    cursor: pointer;
    color: red;
}
.filter{
    padding: 10px;
    margin-left: 10px;
    text-align: left;
}
.selectedFilter{
    margin-left: 20px;
}
.filterName{
    font-weight: bold;
}
.filterName img{
    cursor: pointer;
}
.colorFilter,.statusFilter{
    left: 0px;
    padding-bottom: 1px;
}
.colorSquare{
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 2em;
}
.filterName{
    margin-bottom: 10px;
}
.filterOpts{
    height: 20px;
    margin-top: -5px;
}
.allFilter{
    margin-left: 10px;
    cursor: pointer;
    color: rgb(49,133,156);
    font-size: 11px;
    font-weight: normal;
}
.noFilter{
    font-weight: normal;
    cursor: pointer;
    color: rgb(49,133,156);
    font-size: 11px;
    margin-left: 10px;
}
label.colorFilter,label.statusFilter{
    color: rgb(33,89,104) !important;
    margin-left: 15px;
}
#sort{
    margin-left: 10px;
}
#bikelisting{
    float:left;
    margin-top: 10px;
    margin-left: 50px;
}
#results{
    overflow-x: hidden;
    overflow-y: auto;
}
#detailTable{
    margin-bottom: 2px;
    height: 100px;
    text-align: left;
    font-family: Arial;
}
#detailTable tr th{
    font-size: 12px;
    font-weight: normal !important;
}
#detailTable tbody tr:hover td,
#detailTable tbody tr:hover th {
  background-color: transparent;
}
.staticDetailAttributes tr{
    font-size: 12px;
    font-weight: normal;
}
.staticAttributes{
 /*width:250px;*/
}
.staticAttributes tr,.staticAttributes th{
	border:0;
	color:black;
}

input {
     margin-left: 5px;
     margin-right: 5px;
}

form.bike_form{
  border:1px solid #999;
  text-align: left;
  padding: 10px;
}

form.bike_form h2, form.bike_form h1{
    font-size: 1.5em;
}

form.bike_form dl dt{
    float:left;
    margin-right: 10px;
}

form.bike_form dl dd{
    float:none;
}

*.radio_optn input, *.radio input{
border-width: 0px;
display: inline;
}

#user_login_status{
margin: 0px;
}

