<%= form_for(@comment, :url=> url) do |f| %>
<%= f.label :body, "Add a note:" %><br />
<%= f.text_area :body,  :cols=>80, :rows=>10 , :required => true %> 
<div class="actions">
<%= button_tag "Submit note", :class=> "btn btn-primary" %>
</div>
<% end %>
