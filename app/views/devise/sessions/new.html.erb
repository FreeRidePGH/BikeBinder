<section class=" offset4 span8 userLogin" >
<h2>Sign In</h2>

  <!-- needs to have a unique name for login, this is not the new user form -->
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<fieldset>
  <%= f.label :email %>
  <%= f.email_field :email , :required => true %>

  <%= f.label :password %>
  <%= f.password_field :password, :required => true %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

  <%= f.submit I18n.translate('commit_btn.new_user_session'),
      :class => "btn btn-primary", :id => "commit"  %>
</fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>
</section>
