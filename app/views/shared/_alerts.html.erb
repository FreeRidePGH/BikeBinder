<% if flash.count>0  %>
<div class="row clearfix">
<% flash.each do |key, value| %>
<!-- bootstrap uses alert as a warning class, lets make the classes match the messages -->
  <section id="alerts" class=" offset2 alert alert-success row span10 alert-<%= key %>">
  <% if value.is_a? Hash %>
    <p><%= value.delete :description %></p>
    <ul>
    <% value.each do |k, val| %>
       <%= content_tag(:li, val) %>
    <% end %>
    </ul>
  <% elsif value.is_a? Array %>
     <p><%= value.delete_at(0)  %></p>
     <ol>
     <% value.each do |val| %>
       <%= content_tag(:li, val) %>
     <% end %>
     </ol>
  <% else %>
    <%= content_tag(:p, value) %>
  <% end %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </section>

<% end # flash.each %>
<% end # flash.count > 0 %>
</div>
