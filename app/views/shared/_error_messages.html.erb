<% if object.errors.any? %>
<div class="alert alert-error" id="error_explanation">
  <h2><%= pluralize(object.errors.count, "Error") %>
    prohibited this <%= object.class.to_s.underscore.humanize.downcase %> from being saved:</h2>
  <p>The following fields had problems:</p>
  <ul>
    <% object.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
