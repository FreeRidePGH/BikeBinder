<%= form_for(program) do |f| %>

<%= render 'shared/error_messages', :object=>f.object %>

<fieldset>
<%= f.label :title, "Program Title" %>
<%= f.text_field :title , :required => true %>



<%= f.label :project_category_id, "Project Category" %>
<%= select_tag(:project_category_id, options_from_collection_for_select(ProjectCategory.accepting_programs, :id, :name)) %>



<%= f.label :max_open, "Max number of open projects" %>
<%= f.text_field :max_open %>



<%= f.label :max_total, "Max number of total projects" %>
<%= f.text_field :max_total %>
</fieldset>

<%= button_tag "Save program", :class => "btn btn-primary" %>


<% end %>
