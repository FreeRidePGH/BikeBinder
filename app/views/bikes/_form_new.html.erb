
<%= form_for(bike) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

<fieldset>
<%= f.label :number %>
<%= f.text_field :number, :value=>bike.number , :required => true %>


<%= f.label :color %>
<%= f.text_field :color , :required => true, :id => "colorInput"  %>


<%= f.label :mfg, "Manufacturer" %>
<%= f.text_field :mfg %>


<%= f.label :model %>
<%= f.text_field :model %>
<!-- how do I make render this tag differently for edit or add bike? -->
<%= button_tag "Create New Bike", :class => "btn btn-primary" %>

</fieldset>

<% end %>
