
<%= form_for(bike) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

<fieldset>
<%= f.label :number %>
<%= f.text_field :number, :value=>bike.number , :required => true %>



<%= f.label :color %>
<%= f.text_field :color , :required => true  %>



<%= f.label :mfg, "Manufacturer" %>
<%= f.text_field :mfg %>



<%= f.label :model %>
<%= f.text_field :model %>

<%= button_tag "Update" ,  :class => "btn btn-primary" %>

</fieldset>

<% end %>
