<div class = "pull-left filter">
    <span class = "filterName">BRAND</span>
    <ul>
        <% @brands.each do |brand| %>
            <input name = "bike_brand" class = "checkBrand" value = "<%=brand.id%>" type = "checkbox" checked = "checked" >
                <%= brand.name %>
            </input><br />
        <% end %>
    </ul>
</div>
<div class = "pull-left filter">
    <span class = "filterName">COLOR</span>
    <ul>
        <% counter = 1 %>
        <% @colors.each do |color| %>
            <div class = "colorFilter" style = "background-color:<%=color%>">
            <input name = "bike_color" class = "checkColor" value = "<%=color%>" type = "checkbox" checked = "checked">
                <%= color %>
            </input>
            <% counter = counter + 1 %>
            </div>
        <% end %>
    </ul>
</div>
<div class = "pull-left filter">
    <span class = "filterName">STATUS</span>
    <ul>
        <li><input type = "checkbox" class = "checkStatus" checked = "checked" value = "-1" type = "checkbox" />Available</li>
        <li><input type = "checkbox" class = "checkStatus" checked = "checked" value = "-2" type = "checkbox" />Departed</li>
        <% @statuses.each do |progName,progId| %>
            <li>
            <%= check_box_tag "bike_brand",progId,false,:class => "checkStatus" %> <%= progName %> <br />
            </li>
        <% end %>
    </ul>
</div>
